[run]
branch = True
# faça o coverage escrever caminhos RELATIVOS (essencial para o Sonar)
relative_files = True
source =
    oraculoicms_app
    xml_parser

[paths]
# diz para o coverage que estes caminhos diferentes são a MESMA árvore de código
source =
    oraculoicms_app
    xml_parser
    /workspace/oraculoicms_app
    /workspace/xml_parser
    /var/lib/jenkins/workspace/Oraculo_ICMS_env_TEST/oraculoicms_app
    /var/lib/jenkins/workspace/Oraculo_ICMS_env_TEST/xml_parser
    /worspace
    .

[report]
omit =
    **/migrations/**
    **/wsgi.py
    **/__init__.py
    **/templates/**
    **/static/**
    **/tests/**
    **/venv/**
    **/.venv/**
    **/site-packages/**
show_missing = True
skip_covered = False
precision = 1
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:

[html]
directory = htmlcov
